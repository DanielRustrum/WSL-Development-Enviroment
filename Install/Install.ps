#* Install WSL-2
Write-Host "Installing WSL-2"
dism.exe /online /enable-feature /featurename:Microsoft-Windows-Subsystem-Linux /all /norestart
dism.exe /online /enable-feature /featurename:VirtualMachinePlatform /all /norestart
# TODO: Run Install/wsl_update_x64.msi
wsl --set-default-version 2

#* Install Ubuntu
Write-Host "Installing Ubuntu-Latest"
Enable-WindowsOptionalFeature -Online -FeatureName Microsoft-Windows-Subsystem-Linux


#* Setup Ubuntu
Write-Host "Launching Ubuntu..."

Read-Host -Prompt "Please FOLLOW SETUP INSTRUCTIONS on Ubuntu then comeback here and hit ENTER:"

#* Setup Dev Env
function cmd {
    [CmdletBinding()]
    param (
        [string] $Command
    )
    cmd.exe /c $Command
}